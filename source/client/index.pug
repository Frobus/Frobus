doctype html
html(lang="ru")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Document
		link(rel="stylesheet" href="fonts/Roboto/index.css")

		style.
			html,
			body,
			#root,
			#root-placeholder {
				display: flex;
				width: 100%;
				height: 100%;
				flex-grow: 1;
				margin: 0;
				padding: 0;
			}
			#root-placeholder {
				justify-content: center;
				align-items: center;
				text-align: center;
			}
			html {
				background: #555;
			}
			/* https://codepen.io/RRoberts/pen/pEXWEp */
			.loader {
				width: 100px;
				height: 100px;
				border-radius: 100%;
				position: relative;
				margin: 0 auto;
				display: block;
				-webkit-perspective: 120px;
				-moz-perspective: 120px;
				-ms-perspective: 120px;
				perspective: 120px;
			}
			.loader:before {
				content: "";
				position: absolute;
				left: 25px;
				top: 25px;
				width: 50px;
				height: 50px;
				background-color: #3498db;
				animation: flip 1s infinite;
			}

			@keyframes flip {
				0% {
					transform: rotate(0);
				}

				50% {
					transform: rotateY(180deg);
				}

				100% {
					transform: rotateY(180deg)  rotateX(180deg);
				}
			}
	body
		#root
			#root-placeholder
				a(href="#" onclick="event.preventDefault();require('electron').remote.BrowserWindow.getFocusedWindow().webContents.openDevTools();" style="display: block;")
					span(class="loader")