html,
body,
#root
	display flex
	width 100%
	height 100%
	overflow hidden

html 
	font-family 'Roboto', Segoe UI, Frutiger, Frutiger Linotype, Dejavu Sans, Helvetica Neue, Arial, sans-serif
	font-size 16px
	line-height 1
	cursor default
	user-select none
	word-break break-word
	body
		font inherit
		background transparent

*::-webkit-scrollbar
	width: 16px;
	height: 16px;

*::-webkit-scrollbar-track
	background: transparent;

*::-webkit-scrollbar-thumb
	background: #777;

*::-webkit-scrollbar-thumb:hover
	background: #555;

[id="root"]
	width 100%
	display flex
	> *
		width 100%